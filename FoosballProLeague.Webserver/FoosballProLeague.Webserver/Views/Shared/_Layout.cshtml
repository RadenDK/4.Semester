@model FoosballProLeague.Webserver.Models.HomePageViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoosballProLeague.Webserver</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="container-fluid">
            <div class="profile-info">
                <span class="elo">Elo1v1: elo</span>
                <span class="elo">Elo2v2: elo</span>
            </div>
            <div class="profile">
                <span class="name">@Model.FullName</span>
                <div class="profile-dropdown">
                    <a class="profile-icon" id="profileIcon"><i class="fa-solid fa-user"></i></a>
                    <div class="dropdown-menu" id="dropdownMenu">
                        <a href="/Login/Logout" class="logout-link">
                            Logout<i class="fa-solid fa-right-from-bracket"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="body-container">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/layout.js"></script>
</body>
</html>
