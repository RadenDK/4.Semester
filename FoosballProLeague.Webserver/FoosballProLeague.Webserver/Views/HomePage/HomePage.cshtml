@using Microsoft.AspNetCore.Mvc.ModelBinding
@model FoosballProLeague.Webserver.Models.HomePageViewModel

@{
    Layout = "_LayoutHomePage";
    var mode = ViewBag.Mode as string ?? "1v1";
    var sortedModel = mode == "1v1" ? Model.Users?.OrderByDescending(user => user.Elo1v1).ToList() : Model.Users?.OrderByDescending(user => user.Elo2v2).ToList();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoosballProLeague</title>
    <link rel="stylesheet" href="~/css/HomePage.css">
    <link rel="stylesheet" href="~/css/layoutHomepage.css">


</head>
<body>
    <div class="container">
        <div class="main">
            <div class="leaderboard-section">
                <div class="leaderboard">
                    <div class="leaderboard-header">
                        <h2>Leaderboard</h2>
                        <a href="/HomePage/1v1" class="elo-button @(mode == "1v1" ? "active" : "")">1v1</a>
                        <a href="/HomePage/2v2" class="elo-button @(mode == "2v2" ? "active" : "")">2v2</a>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Name</th>
                                <th>Elo</th>
                            </tr>
                        </thead>
                        <tbody id="leaderboardBody">
                            @if (sortedModel != null && sortedModel.Count > 0)
                            {
                                @for (int i = 0; i < sortedModel.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>@sortedModel[i].FirstName @sortedModel[i].LastName</td>
                                        <td>@(mode == "1v1" ? sortedModel[i].Elo1v1 : sortedModel[i].Elo2v2)</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3">No users available</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="match-section">
                <div class="ongoing-match-section">
                    <div class="ongoing-match">
                        <h2>Ongoing match</h2>
                        <div class="match-info">
                            <div class="match-time"></div>
                            <div class="match-team">
                                <span class="team-red">Team Red</span>
                            </div>
                            <div class="match-score">
                                <span class="team">Carl</span> <span class="score">4 - 0</span> <span class="team">Olivier</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="match-history-section">
                    <div class="match-history">
                        <h2>Match history</h2>
                        @if (Model.MatchHistory != null)
                        {
                            <table>
                                <thead>
                                <tr>
                                    <th>Red Team</th>
                                    <th>Blue Team</th>
                                    <th>Score</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (MatchHistoryViewModel match in Model.MatchHistory)
                                {
                                    <tr>
                                        <td>
                                            @match.RedTeamUser1 @if (!string.IsNullOrEmpty(match.RedTeamUser2)) { @match.RedTeamUser2 }
                                        </td>
                                        <td>
                                            @match.BlueTeamUser1 @if (!string.IsNullOrEmpty(match.BlueTeamUser2)) { @match.BlueTeamUser2 }
                                        </td>
                                        <td>
                                            @match.TimeAgo
                                        </td>
                                        <td>
                                            <span class="team-red">@match.RedTeamScore</span> - <span class="team-blue">@match.BlueTeamScore</span>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="history-item">
                                <span>No played matches available</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
